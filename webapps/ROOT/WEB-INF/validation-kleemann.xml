<form-validation>

<formset>
		<form name="KlContactDetailForm">
        	<field property="subject"
         	   depends="required">
				 <arg0 key="kleemann.contact.detail.subject"/>
        	</field>
        	<field property="receiver"
         	   depends="required">
				 <arg0 key="kleemann.contact.detail.receiver"/>
        	</field>
        	<field property="emails"
         	   depends="required">
				 <arg0 key="kleemann.contact.detail.emails"/>
        	</field>
        	<field property="code"
         	   depends="required">
				 <arg0 key="kleemann.contact.detail.code"/>
        	</field>
        </form>
        
</formset>        
	
</form-validation>
