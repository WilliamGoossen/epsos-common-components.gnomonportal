<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
   <formset>
   		   
        <form name="CreateAccountForm">
        	<field property="compEmail" depends="email">
				 <arg0 key="egov.accounts.user.emailaddress"/>
        	</field> 
        	
        	<field property="compWeb"
         	   depends="mask">
         	     <msg name="mask" key="parties.addresses.webpage.maskmsg"/>
				 <arg0 key="egov.accounts.user.compWeb"/>
				 <var>
				 <var-name>mask</var-name>
				 <var-value>^http://|ftp://[\w./]+$</var-value>
				 </var>
        	</field> 
        </form>
        
        
      </formset>
</form-validation>
