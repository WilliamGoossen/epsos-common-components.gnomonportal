<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
   <formset>
   		   
        <form name="SrvServiceActionForm">
        	<field property="name" depends="required">
        		<arg0 key="srv.action.name"/>
        		
        	</field>
        	<field property="javaClass" depends="required">
        		<arg0 key="srv.action.javaClass"/>
        	</field>
        	
        </form>
        
           <form name="SrvServiceRegistrationForm">
        	<field property="afm" depends="minlength">
        		<arg0 key="srv.afm"/>
        		<arg1 name="minlength" key="${var:minlength}" resource="false"/>
                     <var>
                       <var-name>minlength</var-name>
                       <var-value>9</var-value>
                     </var>
        	</field>
        </form>
        
      </formset>
</form-validation>
