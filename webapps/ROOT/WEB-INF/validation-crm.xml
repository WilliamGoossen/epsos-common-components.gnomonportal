        		<arg0 key="crm.devicealert.comment.subject"/>
        	</field>
        </form>
        
        <form name="CrDeviceForm">
        	<field property="deviceId" depends="required,maxlength">
        		<arg0 key="crm.device.deviceId"/>
        		<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
                     <var>
                       <var-name>maxlength</var-name>
                       <var-value>50</var-value>
                     </var>
        	</field>
        	<field property="name" depends="required,maxlength">
        		<arg0 key="crm.device.name"/>
        		<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
                     <var>
                       <var-name>maxlength</var-name>
                       <var-value>200</var-value>
                     </var>
        	</field>
        </form>
        
        <form name="CrDeviceAssignmentForm">
        	<field property="fromDate" depends="required">
        		<arg0 key="crm.device.assignment.fromDate"/>
        	</field>
        	<field property="crmPartyName" depends="required">
        		<arg0 key="crm.device.assignment.crmPartyId"/>
        	</field>
        </form>
        
      </formset>
</form-validation>
