        	<field property="title"
         	   depends="required">
				 <arg0 key="title"/>
        	</field>
        	<field property="eventDateStart"
         	   depends="required">
				 <arg0 key="bs.events.date-start"/>
        	</field>
        	<field property="eventTime"
         	   depends="mask">
				 <arg0 key="bs.events.eventStartTime"/>
				 <msg name="mask" key="bs.events.errors.time-format"/>
				 <var>
				 <var-name>mask</var-name>
				 <var-value>^[0-2]\d:[0-5]\d$</var-value>
				 </var>
        	</field>
        	
        	<field property="eventEndTime"
         	   depends="mask">
				 <arg0 key="bs.events.eventEndTime"/>
				 <msg name="mask" key="bs.events.errors.time-format"/>
				 <var>
				 <var-name>mask</var-name>
