<form-validation>
	<formset>
		<form name="BsBookmarkForm">
        	<field property="title"
         	   depends="required">
				 <arg0 key="bs.bookmarks.title"/>
        	</field>
        </form>

        <form name="BsBannerForm">
        	<field property="title"
         	   depends="required">
				 <arg0 key="title"/>
